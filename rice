#!/bin/bash
#
# onodera - onodera at openmailbox dot org
# Display some rice info

## CONFIGURATION

# Set colors
foreground="\e[0;39m"
brown="\e[1;33m"

# Set variables
hostname="$(hostname)"
distro="$(crux)"
kernel="$(uname -r -s)"
uptime="$(uptime -p | cut -d " " -f 2-)"
packages="$(pkginfo -i | wc -l)"

## EXECUTE

# Resize terminal
if [[ -n "$DISPLAY" ]]; then
	wmctrl -r :ACTIVE: -e 0,-1,-1,530,190
	sleep 0.1
fi

# Echo rice
echo -e "                   $brown$USER$foreground@$brown$hostname$foreground"
echo -e '       /\'
echo -e '      /  \'"         ${brown}Distro:$foreground    $distro"
echo -e '     /    \'"        ${brown}Kernel:$foreground    $kernel"
echo -e '    /˚̆̈̉` ˚̆̈̉` \'"       ${brown}Uptime:$foreground    $uptime"
echo -e '   /   レ   \'"      ${brown}Packages:$foreground  $packages"
echo -e '  /     つ   \'"     ${brown}WM:$foreground        FVWM"
echo -e ' /            \'"    ${brown}Font:$foreground      Gohufont 14"
echo -e ' ‾‾‾‾‾‾‾‾‾‾‾‾‾‾'
