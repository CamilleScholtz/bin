#!/bin/bash
#
# onodera - onodera at openmailbox dot org
# A script to easily play and manage your escapism

# TODO: Disable config.bak

foreground="\e[0;39m"
brown="\e[1;33m"

info() {
	show="$(cat "$HOME/etc/neet/list")"

	active="$(echo "$show" | grep "+")"

	name="$(echo "$active" | cut -d "|" -f 2- | cut -c 2- | tr -d "\r")"
	if [[ -z "$current" ]]; then
		current="$(echo "$active" | cut -d "/" -f 1 | cut -d "[" -f 2-)"
	fi
	total="$(echo "$active" | cut -d "]" -f 1 | cut -d "/" -f 2-)"
}

fuzzy() {
	directories="$(ls -d "$HOME/tmp/downloads/"*/ | cut -d "/" -f 5- | cut -d "/" -f -1)"


	mostlikely="$(
		IFS=$'\n'
		for directory in $directories; do
			unset IFS
			for word in $name; do
				echo "$directory" | grep -i "$(echo "$word" | tr -d ",")"
			done
		done
	)"

	count="$(echo "$mostlikely" | uniq | wc -l)"
	if [[ "$count" -ge 2 ]]; then
		if [[ -n "$(grep "$name" "$HOME/etc/neet/save")" ]]; then
			mostlikely="$(cut -d "|" -f 2- "$HOME/etc/neet/save" | cut -c 2-)"
		else
			echo -e "There are $count directories that match $brown$name$foreground:\n" 
			# TODO: Add grep color here like in aiko
			echo -e "$(echo "$mostlikely" | nl | sed "s/^ */  /g")\n"
			read -p "Which directory would you like to use? [1-$count] " answer
			case "$answer" in
				[1-$count])
					mostlikely="$(echo "$mostlikely" | cut -d $'\n' -f $answer)"
					echo ""
					echo -e -n "Would you like to make this the default answer for $brown$name$foreground? [Y/n] "
					read -p "" answer
					case "$answer" in
						[Nn*])
							echo ""
							;;

						*)
							# TODO: Doesn't support multiple shows/lines
							echo "$name | $mostlikely" > "$HOME/etc/neet/save"
							echo ""
							;;
					esac
					;;
				*)
					exit
					;;
			esac
		fi
	elif [[ "$count" -eq 0 ]]; then
		echo "No match found."
		exit
	fi

	path="$(echo "$mostlikely" | uniq -c | sort | tail -n 1 | cut -d " " -f 8-)"

	if [[ "$current" -eq 0 ]]; then
		currentmpv=01
	elif [[ "$current" -le 9 ]]; then
		for number in {1..9}; do
			if [[ "$number" -eq "$((10#$current))" ]]; then
				currentmpv=0$number
			fi
		done
	else
		currentmpv="$current"
	fi

	echo -e "Playing episode $current/$total, $brown$name$foreground."
	mpc -q pause
	mpv --fullscreen "$HOME/tmp/downloads/$path/"*{E,e,Ep,ep,\ }{$currentmpv,$current}*{.avi,.mkv,.mp4}
}

shopt -s extglob

if [[ "$#" -ge 1 ]]; then
	case "$1" in
		-h|--help)
			# TODO: Add change active escapism option
			echo "-e         edit list"
			echo "-s         sort list"
			echo "+(++...)   increment ep"
			echo "-(--...)   decrement ep"
			echo "           play"
			;;
		-e)
			$EDITOR "$HOME/etc/neet/list"
			;;
		-s)
			info

			count="$(grep -c "#" "$HOME/etc/neet/list")"

			for number in $(eval echo "{1..$count}"); do
				# TODO: Finish this
				echo -e "Sorted $brown$(grep -m $number "#" "$HOME/etc/neet/list" | tail -n 1 | cut -d " " -f 11- | tr -d "\r" | tr -d "\n")$foreground list."
			done

			echo -e "$active\n\n$sort1\n$sort2" > ~/test
			;;
		+(+))
			info
			amount="$(echo "$1" | wc -m)"
			increment="$((current - 1 + amount))"

			shift
			if [[ "$increment" -le "$total" ]]; then
				sed -i "s/+ \[$current\/$total\]/+ \[$increment\/$total\]/" "$HOME/etc/neet/list"
				current="$increment"

				fuzzy
			else
				genre="$(echo "$show" | grep -B 32 "+" | grep "#" | tail -n 1 | cut -d "|" -f 2- | cut -c 2- | head -c -2)"

				echo -n -e "$brown$name$foreground completed! Would you like to remove this $genre? [y/N] "
				read -p "" answer
				case "$answer" in
					[Yy]*)
						sed -i "/$name/d" "$HOME/etc/neet/list"
						;;
					*)
						exit
						;;
				esac
			fi
			shift
			;;
		+(-))
			info
			amount="$(echo "$1" | wc -m)"
			decrement="$((current + 1 - amount))"

			shift
			if [[ "$decrement" -ge 1 ]]; then
				sed -i "s/+ \[$current\/$total\]/+ \[$decrement\/$total\]/" "$HOME/etc/neet/list"
				current="$decrement"

				fuzzy
			else
				echo "Can't go lower than 1!"
			fi
			shift
			;;
		*)
			echo "Invalid option, use -h for help."
			;;
	esac
else
	info
	fuzzy
fi
